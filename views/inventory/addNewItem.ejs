<% if (title) { %>
    <h1><%= title %></h1>
     <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <div>
    <form action="/inventory/addNewItem" method="post">
        <div>
            <label>Classification:</label>
            <select id="classification_id" name="classification_id" required>
                <option selected value="Choose a Classification"></option>
                <% option.rows.forEach(option => {
                    %> <option value="<%=option.classification_id %>"><%=option.classification_name %></option>
                    <%
                }) %>
            </select>
        </div>
        <br>
        <div>
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" required minlength="3" title="Minimum of 3 characters" placeholder="Minimum of 3 characters" value="locals.inv_make">
        </div>
        <br>
        <div>
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" required minlength="3" title="Min of 3 characters" placeholder="Min of 3 characters" value="<%= locals. inv_model %>">
        </div>
        <br>
        <div>
            <label for="inv_description">Description:</label>
            <textarea type="text" id="inv_description" name="inv_description" required title="Enter description" placeholder="Min of 10 characters" value="'<%=locals. inv_description %>"></textarea>
        </div>
        <br>
        <div>
            <label for="inv_image">Image Path:</label>
            <input type="text" id="inv_image" name="inv_image" required title="Image path" value="/images/vehicles/no-image.png" value="<%=locals. inv_image %>">
        </div>
        <br>
        <div>
            <label for="inv_thumbnail">Thumbnail Path:</label>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required title="Image path" value="/images/vehicles/no-image-tn.png">
        </div>
        <br>
        <div>
            <label for="inv_price">Price:</label>
            <input type="text" id="inv_price" name="inv_price" required pattern="^\d*/.?/d*$" title="Decimal or integer" placeholder="Decimal or integer">
        </div>
        <br>
        <div>
            <label for="inv year">Year:</label>
            <input type="text" id="inv_year" name="inv_year" required pattern="[0-9] {4,4}" title="4-digit year" placeholder="4-digit year" value="<%= locals. inv_year %>">
        </div>
        <br>
        <div>
            <label for="inv_miles">Miles:</label>
            <input type="text" id="inv_miles" name="inv _miles" required title="digits only" placeholder="digits only" pattern="^/d*$" value="<%= locals.inv_miles %>">
        </div>
        <br>
        <div>
            <label for="inv_color">Color:</label>
            <input type="text" id="inv_color" name="inv_color" required onchange="checkValidity(this)" title="This field is required" value="<%= locals.inv_color %>">
        </div>
        <br>
        <div>
            <input type="submit" value="Add item">
        </div>
    </form>
  </div>