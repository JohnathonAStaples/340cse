<% if (title) { %>
    <h1><%= title %></h1>
     <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div>
    <form action="/account/register" method="post">
        <div>
            <label for="account_firstname">First Name:</label>
            <input type="text" id="account_firstname" name="account_firstname" required>
        </div>
        <br>
        <div>
            <label for="account_lastname">Last Name:</label>
            <input type="text" id="account_lastname" name="account_lastname" required>
        </div>
        <br>
        <div>
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="account_email" required>
        </div>
        <br>
        <div>
            <label for="account_password">Password:</label>
            <input type="password" name="account_password" id="account_password">
            <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</p>
            <span id="pswdBtn">Show Password</span>
        </div>
        <br>
        <button type="submit">Register</button>
    </form>
</div>