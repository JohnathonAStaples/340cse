<% if (title) { %>
    <h1><%= title %></h1>
     <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<div>
    <form action="/account/register" method="post">
        <fieldset>
            <div>
            <label for="account_firstname">First Name:</label>
            <input type="text" id="account_firstname" name="firstname" required>
            </div>
        <br>
            <div>
            <label for="account_lastname">Last Name:</label>
            <input type="text" id="account_lastname" name="lastname" required>
            </div>
        <br>
        <div>
            <label for="account_email">Email Address:</label>
            <input type="email" id="account_email" name="email" required>
        </div>
        <br>
        <div>
            <label for="account_password">Password:</label>
            <input type="password" name="account_password" id="password">
            <div>
            <i>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i>
            </div>
            <div id="pswdBtn">Show Password</div>
        <br>
        </div>
        <button type="submit">Register</button>
    </fieldset>
    </form>
</div>